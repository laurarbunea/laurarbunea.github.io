	<!--############### typography section ###############-->
 
    <div class='[ section gutters ] t-dark' id='typography' >

        <div class='[ grid section section--stacked]'>

            <div class='[ width-full ] u-text-center'>

	        
	            <h2>
		        	<%= styleguide.typography.title %>
				</h2>

		        <p class='u-font-size++'>
		        	<%= styleguide.typography.blurb %>
		        </p>

            </div>

        </div>

        <div class='[ grid grid--middle grid--col-spacing ] '>

			<div class='[ width-full width-1/2@large ]'>
				       
		        <h3>
		        	<%= styleguide.typography.font.name %>
				</h3>

		        <p>
		        	<%= styleguide.typography.font.description %>
		        </p>

		    </div>

			<div class='[ width-full width-1/2@large ]'>

		        <div class='[ grid grid--col-spacing grid--row-spacing ] ' >
	        		
	        		<!--loop over the font styles in the json file -->
	                
	        		<% for(var key in styleguide.typography.styles) {%>
								
					     <div class='[ width-full width-1/3@large width-1/2@medium ] '>
		                   
		                    <div class='swatch u-text-center u-font-size++ ' >

			                    <div class='swatch__top t-soft u-<%- styleguide.typography.styles[key] %>' style="font-size:2rem">
			                        Aa 
			                    </div>

			                    <div class='swatch__bottom t-light'>
			                        <%- styleguide.typography.styles[key] %>
			                    </div>

			                </div>

		                </div>
	                <% } %>

		        </div>

		    </div>

		</div>

    </div><!--section ends-->


	<!--############### Grid breakpoints section ###############-->


    <div class='[ section gutters ] t-plain' id='grid'>

        <div class='[ grid  ]'>

            <div class=' [ width-full ] '>

                <div class='u-text-center section'>         

	                <h2>
			        	<%= styleguide.grid.title %>
					</h2>

			        <p class='u-font-size++'>
			        	<%= styleguide.grid.blurb %>
			        </p>

                </div>

                <div class='[ grid grid--col-spacing grid--row-spacing  ]'>
			            
			        <!--loop over the grid breakpoints in the json file -->
        			<% for(var key in styleguide.grid.breakpoints) {%>
			            <div class='[ width-1/5@large width-1/2@medium ] im-on-<%- styleguide.grid.breakpoints[key].name %>'>
				            <div class='swatch u-text-center'>

					            <div class='swatch__top t-dark ' >
					        
					            	<p><%- styleguide.grid.breakpoints[key].name %></p>
					        		
					            </div>
					        
					            <div class='swatch__bottom t-light'>
					            	<p><%- styleguide.grid.breakpoints[key].px %></p>
					                
					            </div>

					        </div>

			        	</div>
					<% } %>

                </div>

            </div>

        </div>

    </div><!--section ends-->


	<!--############### themes section ###############-->


    <div class='[ section gutters ] t-dark' id='themes'>

        <div class='[ grid section ]'>

            <div class='[ width-full ] u-text-center'>

        
            	<h2>
		        	<%= styleguide.themes.title %>
				</h2>

		        <p class='u-font-size++'>
		        	<%= styleguide.themes.blurb %>
		        </p>
                  

		    </div>

		</div>

        <div class='[ grid grid--row-spacing grid--col-spacing ]'>


        	<!--loop over the theme classes documented in the json file-->
            
    		<% for(var key in styleguide.themes.classes) {%>
					  
		        <div class='[  width-1/4@large width-1/2@medium ]'>
		      
		            <div class='swatch u-text-center'>

			            <div class='swatch__top <%- styleguide.themes.classes[key] %> u-font-size++'>
			               
			                Aa <a href=''>a</a>
			        
			            </div>

			            <div class='swatch__bottom t-plain'>
			            
			                <p><%- styleguide.themes.classes[key] %></p>
			      
			            </div>

			        </div>
		            
		        </div>

	        <% } %>

        </div>

    </div><!--section ends-->

</div><!--wrapper ends -->